pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
                sh 'python3 -m venv .venv'
                sh 'source .venv/bin/activate'
                sh 'pip install -r requirements.txt'
                sh 'cd to-do'
                sh 'py.test --junit-xml test-reports/results.xml'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }

        }

    }
}